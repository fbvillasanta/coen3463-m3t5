  body.hold-transition.skin-red-light.sidebar-mini
    .wrapper
      // Main Header
      header.main-header
        // Logo
        a.logo(href='/admin')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini
            | T
            b I.
          // logo for regular state and mobile devices
          span.logo-lg
            | Thesis
            b IT
            | .
        // Header Navbar
        nav.navbar.navbar-static-top(role='navigation')
          // Sidebar toggle button
          a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
            span.sr-only Toggle navigation
          // Navbar Right Menu
          .navbar-custom-menu
            ul.nav.navbar-nav
              // User Account Menu
              li.dropdown.user.user-menu
                // Menu Toggle Button
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  // The user image in the navbar
                  img.user-image(src='http://static.tumblr.com/0hxowcx/TKtm8i1j5/iron_man_face_avatar_01.gif', alt='User Image')
                  // hidden-xs hides the username on small devices so only the image appears.
                  span.hidden-xs #{user.firstname} #{user.lastname}
                ul.dropdown-menu
                  // The user image in the menu
                  li.user-header
                    img.img-circle(src='http://static.tumblr.com/0hxowcx/TKtm8i1j5/iron_man_face_avatar_01.gif', alt='User Image')
                    p
                      | #{user.firstname} #{user.lastname} - Engineer | Billionaire
                      small @#{user.username}
                  // Menu Footer
                  li.user-footer
                    .pull-left
                      a.btn.btn-primary.btn-flat(href='/') Return to Website
                    .pull-right
                      a.btn.btn-danger.btn-flat(href='/auth/logout') Log out
             
      // Left side column. contains the logo and sidebar
      aside.main-sidebar
        section.sidebar
          // Sidebar Menu
          ul.sidebar-menu
            li.header MENU
            // Optionally, you can add icons to the links
            li(class=(title === "Users" ? 'active' : ''))
              a(href='/admin')
                i.fa.fa-user
                span Users
            li(class=(title === "Collection" ? 'active' : ''))
              a(href='/admin/collections')
                i.fa.fa-cubes
                span Collection
            li.treeview(class=(title === "Add" || title==="Edit" || title==="Delete" ? 'active' : ''))
              a(href='#')
                i.fa.fa-commenting
                span Requests
                span.pull-right-container
                  i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li(class=(title === "Add" ? 'active' : ''))
                  a(href='/admin/add') Add
                li(class=(title === "Edit" ? 'active' : ''))
                  a(href='/admin/edit') Edit
                li(class=(title === "Delete" ? 'active' : ''))
                  a(href='/admin/delete') Delete
          // /.sidebar-menu
        // /.sidebar
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        section.content-header
          h1
            | #{title}
          ol.breadcrumb
            li
              a(href='#')
                i.fa.fa-dashboard
                |  Dashboard
            li.active #{title}

        block content
          // Main content
          section.content
            // Your Page Content Here
          // /.content
        // /.content-wrapper

      block footer
        // Main Footer
        footer.main-footer
          // To the right
          .pull-right.hidden-xs
            | Anything you want
          // Default to the left
          strong
            | Copyright Â© 2017 
            a(href='/') Thesis It v2.0
            | .
          |  All rights reserved.
        
        // /.control-sidebar
        //
          Add the sidebar's background. This div must be placed
          immediately after the control sidebar
        .control-sidebar-bg
