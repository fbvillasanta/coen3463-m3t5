doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		title Thesis It â€” #{title}
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='icon' type='image/png' sizes='32x32' href='/images/thesisit.ico')
		
		link(href='https://fonts.googleapis.com/css?family=Work+Sans:400,300,600,400italic,700', rel='stylesheet', type='text/css')
		
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
		link(rel='stylesheet', href='/stylesheets/login.css')
		// Theme style
		link(rel='stylesheet', href='/stylesheets/style.css')
		// FOR IE9 below
		//if lt IE 9
			script(src='/javascripts/respond.min.js')
	body
		.form
			ul.tab-group
				li.tab.active
					a(href='#signup') Sign Up
				li.tab
					a(href='#login') Log In

			.tab-content
				#signup
					h1 Sign Up for Free
					form(action='#' method='post')
						.top-row
							.field-wrap
								label First Name
									span.req *
								input(type='text' required autocomplete='off')
							.field-wrap
								label Last Name
									span.req *
								input(type='text' required autocomplete='off')
						.field-wrap
							label Email Adress
								span.req *
							input(type='email' required autocomplete='off')
						.field-wrap
							label Set a Password
								span.req *
							input(type='password' required autocomplete='off')
						.field-wrap
							label Retype your Password
								span.req *
							input(type='password' required autocomplete='off')
						button.button.button-block(type='submit') Get Started
				#login
					h1 Welcome Back!
					form(action='#' method='post')
						.field-wrap
							label Email Address
								span.req *
							input(type='email' required autocomplete='off')
						.field-wrap
							label Password
								span.req *
							input(type='password' required autocomplete='off')
						p.forgot
							a(href='#') Forgot Password?
						button.button.button-block Log In

		// jQuery
		script(src='/javascripts/jquery.min.js')
		// Login
		script(src='/javascripts/login.js')
